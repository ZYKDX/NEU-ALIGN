"""
use dictionary makes program faster

current index goes 1 or 2 steps each time
2 steps means we have IV IX XL XC CD CM
"""

class Solution(object):
    def romanToInt(self, s):
        """
        :type s: str
        :rtype: int
        """
        dict = {'I':1,'V':5,'X':10,'L':50,'C':100,'D':500,
                'M':1000,'IV':4,'IX':9,'XL':40,'XC':90,
               'CD':400,'CM':900}
        current = 0
        length = len(s)
        total = 0
        while current < length - 1:
            if s[current:current + 2] in dict:
                total += dict[s[current:current + 2]]
                current += 2
            else:
                total += dict[s[current]]
                current += 1
        if current == length - 1:
            total += dict[s[-1]]
        
        return total
