"""
longest PREFIX!!! easier!
still need caution
"""

class Solution(object):
    def longestCommonPrefix(self, strs):
        """
        :type strs: List[str]
        :rtype: str
        """
        def helper(str1, str2):
            length = 0
            len1=len(str1)
            len2=len(str2)
            if len1*len2 == 0:
                return ''
            for i in range(min(len1, len2)):
                if str1[i] == str2[i]:
                    length += 1
                else:
                    break
            return str1[:length]
            
        result = strs[0]
        if len(strs) == 1:
            return strs[0]
        for i in strs:
            result = helper(result, i)
        return result
